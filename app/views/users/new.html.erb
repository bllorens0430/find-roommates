<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <div class="col-md-12 upper_bar"></div>
            <h2 class="turquoise">Sign up for <span class="logo">Hi Roommates!</span></h2>
            <p>Thank you for signing up! </p>
                

<div class=" col-md-10 col-md-offset-1">
               
                    <%=form_for @user, :html=> {:class => "form-horizontal" } do |f| %>

                                
                                    <%=f.text_field :name, :class=> "form-control col-md-7" , placeholder: "Username"%>
                                
                                    <span id="helpBlock" class="help-block col-md-5">6-50 characters.</span>

                            

                                
                                    <%=f.email_field :email, :class=> "form-control" , placeholder: "Enter email"%>
                                
                                    <span id="helpBlock" class="help-block">Enter a valid email address.</span>



                                
                                    <%=f.password_field :password, :class=> "form-control", placeholder: "Password" %>
                                
                                    <span id="helpBlock" class="help-block">Minimum 6 characters.</span>



                                
                                    <%=f.password_field :password_confirmation, :class=> "form-control" , placeholder: "Confirm password"%>
                                
                                    <span id="helpBlock" class="help-block">Confirm your password.</span>
</div>
                <div class="col-md-12 lower_bar">

                        <p> Already have an account?
                            <%=link_to "Sign in", login_path %>!
                                </p>

                  <%=f.submit "Submit", class: "btn btn-default btn-primary" %>
                            <% end %>

                </div>
        </div>
    </div>
</div>

